@model MVCMovie.Models.RecruitingSite
@using MVCMovie.Resources;


<div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="helpModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="closeModal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default" >
    <div class="panel-heading">
        <h1 class="panel-title" id="selectPanel" data-id="@ViewBag.siteId">
            <b>Specify Job Nodes</b>&nbsp;
            <i class="fa fa-question-circle" aria-hidden="true" style="cursor: pointer" id="help">
            </i>
        </h1> 
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.JobPath)</label>
                    <textarea id="node1" class="form-control" data-toggle="tooltip" , title="@ElementSelector.Job1TipMsg" disabled></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.Job2Path)</label>
                    <textarea id="node2" class="form-control" data-toggle="tooltip" , title="@ElementSelector.Job2TipMsg" disabled></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.companyPath)</label>
                    <textarea id="company" class="form-control" data-toggle="tooltip" , title="@ElementSelector.CompanyTipMsg" disabled></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.othersPath)</label>
                    <textarea id="others" class="form-control" data-toggle="tooltip" , title="@ElementSelector.OthersTipMsg" disabled></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.ListNextPositions)</label>
                    <textarea id="nextPage" class="form-control" data-toggle="tooltip" , title="@ElementSelector.NextTipMsg" disabled></textarea>
                </div>
            </div>
        </div>
        <hr style="margin-bottom: 10px; margin-top: 10px"/>
        <fieldset id="locateJob1Link">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group" style="margin-bottom: 5px">
                        <input type="checkbox" id="containLinks" />&nbsp;&nbsp;<b>Contain job links in email</b>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="pull-right">
                        <div disabled class="btn-group">
                            <button id="goUp" class="btn btn-primary btn-xs">
                                <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>&nbsp;Go up one level
                            </button>
                            <button id="goDown" class="btn btn-primary btn-xs">
                                <i class="fa fa-arrow-circle-down" aria-hidden="true"></i>&nbsp;Go down one level
                            </button>
                        </div>
                        <i class="fa fa-question-circle" aria-hidden="true" style="cursor: pointer" id="locateLinkHelp"></i>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <textarea disabled id="job1link" class="form-control" data-toggle="tooltip" , title="@ElementSelector.Job1LinkTipMsg"></textarea>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-12">
                <button id="clearAll" class="btn btn-primary pull-right">Clear All</button>
            </div>
        </div>
    </div>
</div>

