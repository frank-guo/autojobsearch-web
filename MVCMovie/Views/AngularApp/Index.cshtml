@using Settings = MVCMovie.Settings
@{
    ViewBag.Title = "Index";
}

<app-root>Loading...</app-root>
@section Styles{
    @Styles.Render("/font-awesome-4.7.0/css/font-awesome.min.css")
}
@if (Settings.UseWebpackDevServer)
{
    <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/inline.bundle.js"></script>
    <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/polyfills.bundle.js"></script>
    <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/styles.bundle.js"></script>
    <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/vendor.bundle.js"></script>
    <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/main.bundle.js"></script>
    }
else
{
    <script type="text/javascript" src="/static/polyfills.min.js"></script>
    <script type="text/javascript" src="/static/vendor.min.js"></script>
    <script type="text/javascript" src="/static/app.min.js"></script>
}

